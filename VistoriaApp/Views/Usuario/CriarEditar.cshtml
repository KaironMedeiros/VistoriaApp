@using VistoriaApp.Enums;
@model UsuarioModel 

@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = "Alteração de usuário";
    else
        ViewBag.Subtitulo = "Novo usuário";
}

<h3 class="text-primary">@ViewBag.Subtitulo</h3>
<hr>

<form asp-action="CriarEditar" method="post">
    <div class="form-group">
        <div class="col-md-4 offset-md-3">
            <label asp-for="Nome" class="form-label subTitulo">Nome</label>
            <input type="text" asp-for="Nome" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 offset-md-3">
            <label asp-for="Login" class="form-label subTitulo">Login</label>
            <input type="text" asp-for="Login" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 offset-md-3">
            <label asp-for="Email" class="form-label subTitulo">E-mail</label>
            <input type="text" asp-for="Email" class="form-control">
        </div>
    </div>

    @if (!Context.Request.RouteValues.ContainsKey("id"))
    {
        <div class="form-group">
            <div class="col-md-4 offset-md-3">
                <label asp-for="Senha" class="form-label subTitulo">Senha</label>
                <input type="password" asp-for="Senha" class="form-control">
            </div>
        </div>
    }
    <div class="form-group">
        <div class="col-md-6 offset-md-3">
            <button class="btn btn-success" type="submit">Salvar</button>
            <a class="btn btn btn-danger" asp-controller="Usuario" asp-action="Index">Cancelar</a>
        </div>
    </div>
</form>
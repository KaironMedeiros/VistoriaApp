@model UsuarioModel

@{
    ViewBag.Subtitulo = "Excluir Imovel";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>
<h4>
    Deseja realmente excluir o usuário<span class="text-danger"> @Model.Nome </span>
</h4>

<div class="mt-3">
    <a class="btn btn-success" asp-controller="Usuario" asp-action="Index">Não</a>
    <a class="btn btn-danger" asp-action="Excluir" asp-route-id="@Model.Id">Sim</a>
</div>
